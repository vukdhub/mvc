{% extends "base.html.twig" %}

{% block title %}Drawn Cards{% endblock %}

{% block body %}
    <h1>Drawn Cards</h1>
    <div>
        <p>
            <a href="{{ path('card_game') }}">Back</a>
        </p>
    </div>
    <div>
        <h2>Drawn Cards</h2>
        <ul>
            {% for card in drawn_cards %}
                <li>{{ card.getGraphicRepresentation }}</li>
            {% endfor %}
        </ul>
    </div>

    <div>
        <h2>Cards Left in the Deck</h2>
        <p>{{ remaining_cards }}</p>
    </div>
{% endblock %}
